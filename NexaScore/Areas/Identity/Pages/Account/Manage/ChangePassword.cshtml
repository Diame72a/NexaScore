@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Modifier le mot de passe";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm mt-3">
            <div class="card-header bg-transparent border-0 pt-4 pb-0 text-center">
                <h3 class="fw-bold text-primary">
                    <i class="bi bi-shield-lock-fill me-2"></i>@ViewData["Title"]
                </h3>
                <p class="text-muted small">Assurez la sécurité de votre compte NexaTalent</p>
            </div>

            <div class="card-body p-4">
                <partial name="_StatusMessage" for="StatusMessage" />

                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Ancien mot de passe" />
                        <label asp-for="Input.OldPassword" class="form-label"><i class="bi bi-key me-1"></i> Ancien mot de passe</label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nouveau mot de passe" />
                        <label asp-for="Input.NewPassword" class="form-label"><i class="bi bi-lock me-1"></i> Nouveau mot de passe</label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmer le nouveau mot de passe" />
                        <label asp-for="Input.ConfirmPassword" class="form-label"><i class="bi bi-check-circle me-1"></i> Confirmer le mot de passe</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-lg btn-primary shadow-sm rounded-3">
                        <i class="bi bi-save me-2"></i> Mettre à jour le mot de passe
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}