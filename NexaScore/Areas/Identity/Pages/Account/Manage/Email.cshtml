@page
@model EmailModel
@{
    ViewData["Title"] = "Gérer l'email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm mt-3">
            <div class="card-header bg-transparent border-0 pt-4 pb-0 text-center">
                <h3 class="fw-bold text-primary">
                    <i class="bi bi-envelope-at-fill me-2"></i>@ViewData["Title"]
                </h3>
                <p class="text-muted small">Gérez votre adresse de contact principale et sa validation.</p>
            </div>

            <div class="card-body p-4">
                <partial name="_StatusMessage" for="StatusMessage" />

                <form id="email-form" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="form-floating mb-3 input-group">
                            <input asp-for="Email" class="form-control bg-light" placeholder="Email actuel" disabled />
                            <div class="input-group-text bg-white border-start-0">
                                <span class="text-success fw-bold" title="Email vérifié">
                                    <i class="bi bi-check-circle-fill"></i>
                                </span>
                            </div>
                            <label asp-for="Email" class="form-label text-muted">Email actuel</label>
                        </div>
                    }
                    else
                    {
                        <div class="form-floating mb-2">
                            <input asp-for="Email" class="form-control bg-light" placeholder="Email actuel" disabled />
                            <label asp-for="Email" class="form-label text-muted">Email actuel</label>
                        </div>
                        <div class="mb-4">
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-sm btn-outline-warning w-100">
                                <i class="bi bi-exclamation-triangle me-1"></i> Envoyer l'email de vérification
                            </button>
                        </div>
                    }

                    <div class="form-floating mb-4">
                        <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Entrez le nouvel email" />
                        <label asp-for="Input.NewEmail" class="form-label"><i class="bi bi-pencil me-1"></i> Nouvel email</label>
                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                    </div>

                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary shadow-sm rounded-3">
                        <i class="bi bi-arrow-repeat me-2"></i> Changer d'email
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}