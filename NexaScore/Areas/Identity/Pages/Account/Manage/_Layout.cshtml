@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="mb-4 pb-2 border-bottom">
    <h2 class="fw-bold text-primary">
        <i class="bi bi-person-badge me-2"></i>Mon Compte
    </h2>
    <p class="text-muted mb-0">Gérez vos paramètres personnels, votre sécurité et vos données.</p>
</div>

<div class="row g-4">
    <div class="col-lg-3 col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h6 class="text-uppercase text-muted small fw-bold mb-3 ms-1">Menu Paramètres</h6>
                <div class="nexa-sidenav">
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-9 col-md-8">
        @RenderBody()
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}