@model IEnumerable<Projet.Models.Competence>
@{
    ViewData["Title"] = "Catalogue Compétences";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <div class="rounded p-2 me-3 shadow-sm text-white"
                 style="background: linear-gradient(135deg, #4e73df 0%, #224abe 100%); border:none;">
                <i class="fas fa-tags fa-lg"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0 text-dark">Catalogue Compétences</h4>
                <small class="text-muted">Gérez vos @Model.Count() tags techniques</small>
            </div>
        </div>

        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
            <i class="fas fa-plus me-2"></i>Ajouter une compétence
        </a>
    </div>

    <div class="row g-4 mb-4">

        <div class="col-lg">
            <div class="card border-0 shadow-sm h-100 rounded-4">
                <div class="card-body p-4 d-flex flex-column justify-content-center">
                    <h6 class="fw-bold text-dark mb-3"><i class="fas fa-filter me-2 text-primary"></i>Filtrer le catalogue</h6>

                    <form asp-action="Index" method="get" class="row g-3 align-items-end">
                        <div class="col-md-7">
                            <label class="small text-muted fw-bold mb-1">Mots-clés</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="fas fa-search"></i></span>
                                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                                       class="form-control border-0 bg-light" placeholder="Ex: C#, Java...">
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label class="small text-muted fw-bold mb-1">Ordre</label>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]"
                               class="btn btn-light w-100 text-start d-flex justify-content-between align-items-center border-0 bg-light text-muted">
                                <span>@(string.IsNullOrEmpty((string)ViewData["NameSortParm"]) ? "A-Z" : "Z-A")</span>
                                <i class="fas fa-sort text-primary"></i>
                            </a>
                        </div>

                        <div class="col-md-2">
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none small w-100 fw-bold">
                                <i class="fas fa-times me-1"></i>Effacer
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light border-bottom">
                    <tr class="text-muted small text-uppercase fw-bold">
                        <th class="ps-4 py-3">Intitulé</th>
                        <th>Statut</th>
                        <th>Offres Liées</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <div class="mb-3 opacity-25"><i class="fas fa-tags fa-3x"></i></div>
                                Aucune compétence trouvée.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3 fw-bold shadow-sm"
                                             style="width: 38px; height: 38px; background-color: rgba(78, 115, 223, 0.1); color: #4e73df;">
                                            @if (!string.IsNullOrEmpty(item.Nom))
                                            {
                                                @item.Nom.Substring(0, 1).ToUpper()
                                            }
                                        </div>
                                        <span class="fw-bold text-dark">@item.Nom</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-10 rounded-pill px-3 fw-normal">Actif</span>
                                </td>
                                <td>
                                    <span class="small text-muted"><i class="fas fa-link me-1"></i> Disponible</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white text-primary border-end px-3" title="Modifier"><i class="fas fa-pen"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white text-danger px-3 hover-bg-danger" title="Supprimer"><i class="fas fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-white border-0 py-3 text-end">
            <small class="text-muted">Affichage de @Model.Count() éléments</small>
        </div>
    </div>
</div>

    <style>
        .hover-scale:hover {
            transform: scale(1.05);
        }

        .hover-bg-danger:hover {
            background-color: #dc3545 !important;
            color: white !important;
        }
    </style>
