@model Projet.Models.HomeDashboardViewModel

@{
    ViewData["Title"] = "Tableau de Bord RH";
}

<style>
    /* Styles spécifiques Dashboard */
    .kpi-card {
        border: none;
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: white;
        overflow: hidden;
    }

        .kpi-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important;
        }

    /* Dégradés subtils pour les icônes */
    .bg-icon-blue {
        background: linear-gradient(135deg, rgba(78,115,223,0.1) 0%, rgba(78,115,223,0.2) 100%);
        color: #4e73df;
    }

    .bg-icon-green {
        background: linear-gradient(135deg, rgba(28,200,138,0.1) 0%, rgba(28,200,138,0.2) 100%);
        color: #1cc88a;
    }

    .bg-icon-orange {
        background: linear-gradient(135deg, rgba(246,194,62,0.1) 0%, rgba(246,194,62,0.2) 100%);
        color: #f6c23e;
    }

    .icon-circle-lg {
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 1.75rem;
    }

    /* Timeline du bas */
    .list-group-item-action:hover {
        background-color: #f8f9fc;
        transform: translateX(5px);
        transition: transform 0.2s;
    }
</style>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-dark mb-1">Tableau de Bord</h2>
            <p class="text-muted small mb-0">
                <i class="far fa-calendar-alt me-2"></i> @DateTime.Now.ToString("dddd d MMMM yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            @if (Model.NbOffres > 0)
            {
                <a asp-controller="Offres" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 fw-bold">
                    <i class="fas fa-bolt me-2"></i>Action Rapide
                </a>
            }
            <a asp-controller="Scoring" asp-action="Index" class="btn btn-primary shadow-sm rounded-pill px-4 fw-bold"
               style="background: linear-gradient(135deg, #4e73df 0%, #224abe 100%); border:none;">
                <i class="fas fa-magic me-2"></i>Lancer un Matching
            </a>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 kpi-card shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <p class="text-uppercase fw-bold text-primary small mb-1 ls-1">Offres Actives</p>
                            <h2 class="display-4 fw-bold text-dark mb-0">@Model.NbOffres</h2>
                        </div>
                        <div class="icon-circle-lg bg-icon-blue shadow-sm">
                            <i class="fas fa-briefcase"></i>
                        </div>
                    </div>
                    <a asp-controller="Offres" asp-action="Index" class="text-decoration-none fw-bold small text-primary stretched-link">
                        Gérer les postes <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 kpi-card shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <p class="text-uppercase fw-bold text-success small mb-1 ls-1">Vivier Talents</p>
                            <h2 class="display-4 fw-bold text-dark mb-0">@Model.NbCandidats</h2>
                        </div>
                        <div class="icon-circle-lg bg-icon-green shadow-sm">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <a asp-controller="Personnes" asp-action="Index" class="text-decoration-none fw-bold small text-success stretched-link">
                        Consulter la liste <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 kpi-card shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <p class="text-uppercase fw-bold text-warning small mb-1 ls-1">Compétences</p>
                            <h2 class="display-4 fw-bold text-dark mb-0">@Model.NbCompetences</h2>
                        </div>
                        <div class="icon-circle-lg bg-icon-orange shadow-sm">
                            <i class="fas fa-tags"></i>
                        </div>
                    </div>
                    <a asp-controller="Competences" asp-action="Index" class="text-decoration-none fw-bold small text-warning stretched-link">
                        Voir le catalogue <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100 rounded-4">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h6 class="fw-bold mb-0 text-dark"><i class="fas fa-chart-bar me-2 text-primary"></i>Répartition par Métier</h6>
                </div>
                <div class="card-body px-4 pb-4">
                    <div style="height: 300px;">
                        <canvas id="chartMetiers"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100 rounded-4">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h6 class="fw-bold mb-0 text-dark"><i class="fas fa-chart-pie me-2 text-success"></i>Niveaux d'Expérience</h6>
                </div>

                <div class="card-body position-relative p-4 d-flex justify-content-center align-items-center">

                    <div style="height: 250px; width: 100%;">
                        <canvas id="chartExp"></canvas>
                    </div>

                    <div class="position-absolute top-50 start-50 translate-middle text-center"
                         style="pointer-events: none; margin-top: -20px;">
                        <span class="d-block display-4 fw-bold text-dark mb-0" style="line-height: 1;">@Model.NbCandidats</span>
                        <span class="small text-uppercase text-muted fw-bold" style="font-size: 0.7rem; letter-spacing: 1px;">Profils</span>
                    </div>

                </div>

                <div class="card-footer bg-white border-0 text-center pb-4 pt-0">
                    <small class="text-muted">Répartition globale du vivier</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100 rounded-4">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0 text-dark">⚡ Activités Récentes</h6>
                    <span class="badge bg-light text-secondary border fw-normal">Dernières actions</span>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush mt-2">
                        @if (Model.Activites != null && Model.Activites.Any())
                        {
                            @foreach (var item in Model.Activites.Take(4))
                            {
                                var isOffre = item.Type == "Offre";
                                var icon = isOffre ? "fa-briefcase" : "fa-user";
                                var colorClass = isOffre ? "bg-icon-blue" : "bg-icon-green"; // Utilise nos classes CSS
                                var linkController = isOffre ? "Offres" : "Personnes";

                                <a asp-controller="@linkController" asp-action="Details" asp-route-id="@item.Id"
                                   class="list-group-item list-group-item-action border-0 px-4 py-3 d-flex align-items-center">
                                    <div class="rounded-circle p-2 me-3 d-flex align-items-center justify-content-center @colorClass"
                                         style="width: 40px; height: 40px;">
                                        <i class="fas @icon small"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-bold text-dark small">@item.Titre</div>
                                        <div class="text-muted" style="font-size: 0.75rem;">@item.SousTitre</div>
                                    </div>
                                    <small class="text-muted opacity-50"><i class="fas fa-chevron-right"></i></small>
                                </a>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted small">
                                <i class="fas fa-inbox mb-2"></i><br />Aucune activité récente.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100 text-white rounded-4 overflow-hidden"
                 style="background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);">
                <div class="card-body p-5 d-flex flex-column justify-content-center text-center position-relative">
                    <i class="fas fa-rocket position-absolute text-white opacity-10" style="font-size: 10rem; right: -20px; bottom: -20px;"></i>

                    <h3 class="fw-bold mb-3 position-relative">Prêt à recruter ?</h3>
                    <p class="mb-4 opacity-75 position-relative">Ajoutez rapidement de nouveaux profils ou créez une offre pour lancer l'algorithme de matching IA.</p>

                    <div class="d-flex justify-content-center gap-3 position-relative">
                        <a asp-controller="Offres" asp-action="Create" class="btn btn-light text-primary fw-bold shadow-sm px-4 rounded-pill">
                            <i class="fas fa-plus-circle me-2"></i>Nouvelle Offre
                        </a>
                        <a asp-controller="Personnes" asp-action="Create" class="btn btn-outline-light fw-bold px-4 rounded-pill">
                            <i class="fas fa-user-plus me-2"></i>Nouveau Candidat
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {

        // --- CHART 1: OFFRES (BARRES VERTICALES) ---
        const ctxMetiers = document.getElementById('chartMetiers').getContext('2d');
        const labelsMetiers = @Html.Raw(Json.Serialize(Model.LabelsMetiers));
        const dataMetiers = @Html.Raw(Json.Serialize(Model.DataMetiers));

        let gradientBar = ctxMetiers.createLinearGradient(0, 0, 0, 300);
        gradientBar.addColorStop(0, '#4e73df');
        gradientBar.addColorStop(1, '#224abe');

        new Chart(ctxMetiers, {
            type: 'bar',
            data: {
                labels: labelsMetiers,
                datasets: [{
                    label: 'Postes ouverts',
                    data: dataMetiers,
                    backgroundColor: gradientBar,
                    borderRadius: 6,
                    barThickness: 35
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { borderDash: [5, 5], color: '#f0f0f0' }, ticks: { stepSize: 1, font: { size: 11 } } },
                    x: { grid: { display: false }, ticks: { font: { size: 11 } } }
                }
            }
        });

        // --- CHART 2: EXPÉRIENCE (DONUT) ---
        const ctxExp = document.getElementById('chartExp').getContext('2d');
        const dataExp = @Html.Raw(Json.Serialize(Model.DataExperience));

        new Chart(ctxExp, {
            type: 'doughnut',
            data: {
                labels: ['Junior (<2 ans)', 'Confirmé (2-5 ans)', 'Senior (5+ ans)'],
                datasets: [{
                    data: dataExp,
                    backgroundColor: ['#d1d3e2', '#36b9cc', '#1cc88a'],
                    borderWidth: 2,
                    borderColor: '#ffffff',
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,

                // Trou large pour laisser la place au texte (85%)
                cutout: '85%',

                layout: { padding: 10 },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { usePointStyle: true, boxWidth: 8, font: { size: 11 }, padding: 15 }
                    },
                    tooltip: { enabled: true }
                }
            }
        });
    });
</script>