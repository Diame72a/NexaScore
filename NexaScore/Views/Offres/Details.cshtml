@using System.Linq
@model Projet.Models.Offre

@{
    ViewData["Title"] = "Détails de l'offre";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<style>
    /* Styles spécifiques */
    .icon-box-lg {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 1.5rem;
    }

    .skill-card {
        background: #f8f9fa;
        transition: transform 0.2s;
    }

        .skill-card:hover {
            transform: translateY(-3px);
            background: #fff;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

    .progress-thin {
        height: 6px;
        border-radius: 3px;
    }
</style>

<div class="container py-5">

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none fw-bold">Offres</a></li>
            <li class="breadcrumb-item active text-muted" aria-current="page">Fiche de poste</li>
        </ol>
    </nav>

    <div class="row g-4">

        <div class="col-lg-8">
            <div class="card shadow-lg border-0 h-100 rounded-4 overflow-hidden">

                <div class="card-body p-5">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start mb-4">
                        <div>
                            <h2 class="fw-bold text-dark mb-2">@Model.Titre</h2>
                            <div class="d-flex align-items-center gap-2">
                                <span class="badge bg-light text-dark border fw-normal px-3 py-2 rounded-pill">
                                    <i class="fas fa-briefcase me-2 text-primary"></i> @Model.Poste?.Intitule
                                </span>
                                <span class="badge bg-light text-dark border fw-normal px-3 py-2 rounded-pill">
                                    <i class="fas fa-map-marker-alt me-2 text-danger"></i> @Model.VilleCible
                                </span>
                            </div>
                        </div>
                        <div class="mt-3 mt-md-0">
                            <div class="icon-box-lg text-white shadow-sm fw-bold"
                                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                @Model.Titre.Substring(0, 1).ToUpper()
                            </div>
                        </div>
                    </div>

                    <div class="mb-5">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3 d-flex align-items-center">
                            <i class="fas fa-align-left me-2"></i>A propos du poste
                        </h6>
                        <p class="text-secondary lh-lg" style="white-space: pre-line;">
                            @(string.IsNullOrWhiteSpace(Model.Description) ? "Aucune description détaillée n'a été fournie pour ce poste." : Model.Description)
                        </p>
                    </div>

                    <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
                        <h6 class="text-primary fw-bold mb-0 text-uppercase small">
                            <i class="fas fa-tasks me-2"></i>Compétences techniques
                        </h6>
                        <span class="badge bg-primary bg-opacity-10 text-primary">
                            @(Model.CompetenceSouhaitees?.Count ?? 0) Critères
                        </span>
                    </div>

                    @if (Model.CompetenceSouhaitees != null && Model.CompetenceSouhaitees.Any())
                    {
                        <div class="row g-3">
                            @foreach (var item in ((IEnumerable<Projet.Models.CompetenceSouhaitee>)Model.CompetenceSouhaitees).OrderByDescending(x => x.NiveauRequis))
                            {
                                <div class="col-md-6">
                                    <div class="p-3 border rounded-3 skill-card position-relative">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="fw-bold text-dark">@item.Competence?.Nom</span>
                                            <span class="small fw-bold text-muted">Niveau @item.NiveauRequis</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="progress flex-grow-1 progress-thin">
                                                @{
                                                    var w = item.NiveauRequis * 20;
                                                    var c = item.NiveauRequis >= 4 ? "bg-success" : (item.NiveauRequis >= 3 ? "bg-info" : "bg-warning");
                                                }
                                                <div class="progress-bar @c" role="progressbar" style="width: @w%"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-light border text-center text-muted">
                            <i class="fas fa-info-circle me-2"></i>Aucune compétence technique n'a été définie pour ce poste.
                        </div>
                    }

                </div>

                <div class="card-footer bg-light border-0 p-4 d-flex justify-content-between align-items-center">
                    <small class="text-muted">Dernière mise à jour : @(Model.DateCreation?.ToString("dd/MM/yyyy") ?? "-")</small>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-white border shadow-sm rounded-pill px-4 fw-bold">
                            <i class="fas fa-pen me-2"></i>Modifier
                        </a>
                        <a asp-controller="Scoring" asp-action="Calculer" asp-route-id="@Model.Id" class="btn btn-primary shadow-sm rounded-pill px-4 fw-bold">
                            <i class="fas fa-bolt me-2"></i>Lancer le Matching
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">

            <div class="card shadow-sm border-0 mb-4 rounded-4 overflow-hidden">
                <div class="card-header bg-white fw-bold py-3 px-4 border-bottom d-flex align-items-center">
                    <i class="fas fa-info-circle text-info me-2"></i>Détails Clés
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-4 py-3 border-0">
                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Localisation</small>
                        <span class="text-dark">@Model.VilleCible (@Model.CodePostalCible)</span>
                    </div>
                    <div class="list-group-item px-4 py-3 border-0 bg-light">
                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Expérience Cible</small>
                        @{
                            var cibleExp = Model.ParametreScoring?.CibleExperience;
                            string badgeExp = cibleExp.ToString() switch
                            {
                                "Junior" => "Junior (0-2 ans)",
                                "Confirme" => "Confirmé (2-5 ans)",
                                "Senior" => "Senior (5+ ans)",
                                _ => "Non spécifié"
                            };
                        }
                        <span class="text-dark fw-bold">@badgeExp</span>
                    </div>
                    <div class="list-group-item px-4 py-3 border-0">
                        <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Référence</small>
                        <span class="text-dark font-monospace">JOB-@Model.Id-@DateTime.Now.Year</span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4 overflow-hidden rounded-4">
                <div class="card-header bg-white fw-bold py-3 px-4 border-bottom">
                    <i class="fas fa-map-marked-alt me-2 text-success"></i>Lieu du poste
                </div>
                <div id="map" style="height: 250px; width: 100%;"></div>
                <div class="card-footer bg-white text-center py-2 border-0">
                    <small class="text-muted">Localisation approximative</small>
                </div>
            </div>

            <div class="card border-danger border-opacity-25 bg-danger bg-opacity-10 shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h6 class="text-danger fw-bold mb-2"><i class="fas fa-exclamation-triangle me-2"></i>Zone de danger</h6>
                    <p class="small text-danger opacity-75 mb-3">La suppression de cette offre est définitive.</p>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger w-100 fw-bold bg-white">
                        Supprimer l'offre
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var ville = "@Html.Raw(Model.VilleCible)";
        var cp = "@Html.Raw(Model.CodePostalCible)";
        var query = ville + " " + cp + " France";

        // Initialisation Carte (Leaflet)
        var map = L.map('map', { zoomControl: false }).setView([46.603354, 1.888334], 5);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap'
        }).addTo(map);

        if(ville) {
            fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(query)}`)
                .then(response => response.json())
                .then(data => {
                    if (data && data.length > 0) {
                        var lat = data[0].lat;
                        var lon = data[0].lon;
                        map.setView([lat, lon], 13);
                        L.marker([lat, lon]).addTo(map)
                            .bindPopup(`<b>${ville}</b><br>Poste à pourvoir`)
                            .openPopup();
                    }
                })
                .catch(console.error);
        }
    });
</script>