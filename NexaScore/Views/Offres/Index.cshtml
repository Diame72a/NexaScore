@model IEnumerable<Projet.Models.Offre>
@{
    ViewData["Title"] = "Gestion des Offres";

    // Calculs pour les badges et stats
    int totalOffres = Model.Count();
    int offresRecentes = Model.Count(o => (DateTime.Now - (o.DateCreation ?? DateTime.Now)).TotalDays < 7);
}

<style>
    /* Styles spécifiques Dashboard Offres */
    .border-left-primary {
        border-left: 4px solid #4e73df !important;
    }

    .border-left-success {
        border-left: 4px solid #1cc88a !important;
    }

    .border-left-info {
        border-left: 4px solid #36b9cc !important;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fc;
        transform: scale(1.002);
        transition: all 0.2s;
    }

    .badge-soft-primary {
        background-color: rgba(78, 115, 223, 0.1);
        color: #4e73df;
    }

    .badge-soft-success {
        background-color: rgba(28, 200, 138, 0.1);
        color: #1cc88a;
    }
</style>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-1">Offres d'emploi</h4>
            <p class="text-muted small mb-0">Gérez vos recrutements et analysez les candidatures.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
            <i class="fas fa-plus me-2"></i>Nouvelle offre
        </a>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6 col-xl-4">
            <div class="card border-0 shadow-sm h-100 py-2 border-left-primary">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Postes</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@totalOffres</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-briefcase fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-4">
            <div class="card border-0 shadow-sm h-100 py-2 border-left-success">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Nouveautés (7j)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@offresRecentes</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-plus fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-xl-4">
            <div class="card border-0 shadow-sm h-100 py-2 border-left-info">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Vivier Total</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalCandidats Profils</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 px-4">
                    <form asp-action="Index" method="get" class="row g-2 align-items-center">
                        <div class="col-md-5">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-search text-muted"></i></span>
                                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                                       class="form-control bg-light border-0" placeholder="Rechercher par titre, ville..." onchange="this.form.submit()">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select name="posteId" class="form-select form-select-sm bg-light border-0" onchange="this.form.submit()">
                                <option value="">Toutes les catégories</option>
                                @if (ViewBag.Postes != null)
                                {
                                    foreach (var p in (IEnumerable<dynamic>)ViewBag.Postes) // Adaptation dynamique
                                    {
                                        <option value="@p.Id" selected="@((int?)ViewData["CurrentPoste"] == p.Id)">@p.Intitule</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3 text-end">
                            @if (ViewData["CurrentFilter"] != null || ViewData["CurrentPoste"] != null)
                            {
                                <a asp-action="Index" class="btn btn-sm btn-link text-muted text-decoration-none">Réinitialiser</a>
                            }
                        </div>
                    </form>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-uppercase small text-muted">
                            <tr>
                                <th class="ps-4 py-3 border-0">Poste</th>
                                <th class="border-0">Lieu</th>
                                <th class="border-0">Date</th>
                                <th class="border-0 text-center">Statut</th>
                                <th class="border-0 text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="fas fa-inbox fa-3x mb-3 opacity-25"></i>
                                        <p>Aucune offre trouvée.</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    // Calcul ancienneté sécurisé
                                    DateTime dateSafe = item.DateCreation ?? DateTime.Now;
                                    bool isNew = (DateTime.Now - dateSafe).TotalDays < 7;

                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center me-3 fw-bold"
                                                     style="width: 40px; height: 40px;">
                                                    @(item.Titre?.Substring(0, 1).ToUpper() ?? "?")
                                                </div>
                                                <div>
                                                    <div class="fw-bold text-dark">@item.Titre</div>
                                                    <span class="small text-muted">@item.Poste?.Intitule</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-dark small"><i class="fas fa-map-marker-alt text-muted me-1"></i> @item.VilleCible</span>
                                        </td>
                                        <td>
                                            <span class="text-muted small">@dateSafe.ToString("dd MMM yyyy")</span>
                                        </td>
                                        <td class="text-center">
                                            @if (isNew)
                                            {
                                                <span class="badge badge-soft-success rounded-pill px-2">Nouveau</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-soft-primary rounded-pill px-2">Actif</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <a asp-controller="Scoring" asp-action="Calculer" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-primary rounded-pill px-3 fw-bold shadow-sm" title="Lancer Matching">
                                                <i class="fas fa-bolt me-1"></i> Match
                                            </a>
                                            <div class="btn-group ms-2">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light border text-muted"><i class="fas fa-pen"></i></a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border text-muted"><i class="fas fa-eye"></i></a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light border text-muted hover-red"><i class="fas fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.Any())
                {
                    <div class="card-footer bg-white border-0 py-3 px-4">
                        <small class="text-muted">Affichage de <strong>@Model.Count()</strong> résultats</small>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-3">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white fw-bold py-3 border-bottom small text-uppercase text-muted">
                    Répartition Géographique
                </div>
                <div class="card-body">
                    <div style="height: 200px;">
                        <canvas id="chartVilles"></canvas>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 bg-gradient-primary text-white"
                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body p-4 text-center">
                    <i class="fas fa-rocket fa-3x mb-3 text-white-50"></i>
                    <h6 class="fw-bold">Besoin d'aide ?</h6>
                    <p class="small text-white-50 mb-3">Notre IA analyse les CVs pour trouver le candidat idéal en quelques secondes.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-white text-primary fw-bold rounded-pill w-100 btn-sm">
                        Voir le Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.VillesLabels != null && ((List<string>)ViewBag.VillesLabels).Any())
{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('chartVilles').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.VillesLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.VillesData)),
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'],
                    borderWidth: 2,
                    borderColor: '#ffffff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom', labels: { boxWidth: 10, font: { size: 10 } } }
                },
                cutout: '70%'
            }
        });
    </script>
}