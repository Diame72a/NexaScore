@model IEnumerable<Projet.Models.Poste>
@{
    ViewData["Title"] = "Référentiel Métiers";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <div class="rounded p-2 me-3 shadow-sm text-white"
                 style="background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);">
                <i class="fas fa-briefcase fa-lg"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0 text-dark">Référentiel Métiers</h4>
                <p class="mb-0 text-muted small">Gérez les intitulés de postes de l'entreprise</p>
            </div>
        </div>

        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
            <i class="fas fa-plus me-2"></i>Ajouter un poste
        </a>
    </div>

    <div class="row g-4">

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100 rounded-4 overflow-hidden">

                <div class="card-header bg-white py-3 border-bottom">
                    <div class="row align-items-center justify-content-between">

                        <div class="col-md-4">
                            <h5 class="mb-0 fw-bold text-dark">
                                Liste des Postes
                                <span class="badge bg-primary bg-opacity-10 text-primary ms-2 rounded-pill">@Model.Count()</span>
                            </h5>
                        </div>

                        <div class="col-md-6">
                            <form asp-action="Index" method="get">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="fas fa-search"></i></span>
                                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                                           class="form-control bg-light border-0"
                                           placeholder="Rechercher un métier..."
                                           onchange="this.form.submit()">
                                    @if (!string.IsNullOrEmpty((string)ViewData["CurrentFilter"]))
                                    {
                                        <a asp-action="Index" class="btn btn-light border-0 text-danger pe-3" title="Effacer"><i class="fas fa-times"></i></a>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr class="text-muted small text-uppercase fw-bold" style="letter-spacing: 0.5px;">
                                <th class="ps-4 py-3">Intitulé</th>
                                <th>Statut</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="3" class="text-center py-5 text-muted">
                                        <div class="mb-3 opacity-25"><i class="fas fa-folder-open fa-3x"></i></div>
                                        <p class="mb-0">Aucun métier trouvé pour "@ViewData["CurrentFilter"]".</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center me-3 fw-bold"
                                                     style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user-tie"></i>
                                                </div>
                                                <span class="fw-bold text-dark">@item.Intitule</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-10 rounded-pill px-3 py-2 fw-normal">
                                                <i class="fas fa-check-circle me-1"></i> Actif
                                            </span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white text-primary border-end px-3" title="Modifier"><i class="fas fa-pen"></i></a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-white text-secondary border-end px-3" title="Détails"><i class="fas fa-eye"></i></a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white text-danger px-3 hover-bg-danger" title="Supprimer"><i class="fas fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-white py-3 border-0 text-end">
                    <small class="text-muted fst-italic">Données à jour</small>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @if (Model.Any())
            {
                <div class="card border-0 shadow-sm sticky-top rounded-4" style="top: 100px; z-index: 1;">
                    <div class="card-header bg-white border-0 fw-bold small text-uppercase text-muted pt-4 pb-0 text-center">
                        🏆 Top Recrutements
                    </div>
                    <div class="card-body">
                        <div style="height: 250px; width: 100%;">
                            <canvas id="chartPostes"></canvas>
                        </div>
                        <p class="text-center small text-muted mt-3 lh-sm px-3">
                            <i class="fas fa-info-circle me-1"></i>
                            Répartition des offres d'emploi actuelles par type de métier.
                        </p>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

@if (Model.Any())
{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var ctx = document.getElementById('chartPostes').getContext('2d');

            var labels = @Html.Raw(Json.Serialize(ViewBag.Labels));
            var data = @Html.Raw(Json.Serialize(ViewBag.Data));

            if(labels.length === 0) { labels = ["Aucune donnée"]; data = [0]; }

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: "Offres",
                        data: data,
                        // Utilisation du bleu principal pour le graph
                        backgroundColor: 'rgba(78, 115, 223, 0.85)',
                        borderRadius: 6,
                        barThickness: 15,
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        x: { beginAtZero: true, grid: { display: false }, ticks: { stepSize: 1 } },
                        y: { grid: { display: false }, ticks: { font: { size: 11, family: "'Inter', sans-serif" } } }
                    }
                }
            });
        });
    </script>

    <style>
        .hover-scale:hover {
            transform: scale(1.05);
        }

        .hover-bg-danger:hover {
            background-color: #dc3545 !important;
            color: white !important;
        }
    </style>
}