@model List<Projet.Models.CandidateMatchViewModel>

<div class="container py-4">
    <div class="text-center mb-5">
        <h2 class="fw-bold h1">Top 5 <span class="text-primary">NexaScore</span></h2>
        <p class="text-muted">Analyse de conformité pour l'offre : <strong>@ViewBag.TitreOffre</strong></p>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle border-top">
            <thead class="bg-light small text-uppercase fw-bold text-secondary">
                <tr>
                    <th class="ps-4">Match</th>
                    <th>Candidat</th>
                    <th>Conformité</th>
                    <th>Niveaux</th>
                    <th class="text-end pe-4">Profil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var color = item.ScoreGlobal >= 75 ? "success" : (item.ScoreGlobal >= 50 ? "warning" : "danger");
                    var grade = item.ScoreGlobal >= 75 ? "A" : (item.ScoreGlobal >= 50 ? "B" : "C");

                    <tr class="bg-white">
                        <td class="ps-4">
                            <div class="rounded-circle bg-@color text-white d-flex align-items-center justify-content-center fw-bold shadow-sm"
                                 style="width: 42px; height: 42px;">
                                @grade
                            </div>
                        </td>
                        <td>
                            <div class="fw-bold">@item.NomComplet</div>
                            <div class="small text-muted">@item.JobActuel</div>
                        </td>
                        <td>
                            <div class="progress rounded-pill" style="height: 8px; width: 150px;">
                                <div class="progress-bar bg-@color" style="width: @item.ScoreGlobal%"></div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-column gap-1">
                                @for (int i = 0; i < Math.Min(item.ChartLabels.Count, 2); i++)
                                {
                                    <div class="d-flex align-items-center" style="font-size: 0.75rem;">
                                        <span class="text-truncate me-2" style="width: 70px;">@item.ChartLabels[i]</span>
                                        <div class="d-flex gap-1">
                                            @for (int d = 1; d <= 5; d++)
                                            {
                                                <div class="rounded-circle @(d <= item.ChartDataCandidat[i] ? "bg-primary" : "bg-light border")"
                                                     style="width: 6px; height: 6px;"></div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </td>
                        <td class="text-end pe-4">
                            <a asp-controller="Personnes" asp-action="Details" asp-route-id="@item.CandidatId"
                               class="btn btn-sm btn-dark rounded-pill px-3">
                                <i class="bi bi-person-badge"></i> Voir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>