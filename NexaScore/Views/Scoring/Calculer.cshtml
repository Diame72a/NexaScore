@model List<Projet.Models.CandidateMatchViewModel>

@{
    ViewData["Title"] = "Rapport d'Analyse";
    var topCandidat = Model.FirstOrDefault();
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-end mb-5">
        <div class="d-flex align-items-center">
            <div class="rounded p-3 me-3 shadow-sm text-white"
                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="fas fa-robot fa-2x"></i>
            </div>
            <div>
                <h6 class="text-uppercase text-primary fw-bold small mb-1">Rapport NexaScore™</h6>
                <h2 class="fw-bold text-dark mb-0">@ViewBag.TitreOffre</h2>
                <p class="text-muted mb-0 small">
                    Analyse effectuée sur @Model.Count() profils • @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                </p>
            </div>
        </div>
        <div class="d-flex gap-2">
            <button onclick="window.print()" class="btn btn-white border shadow-sm text-muted fw-bold">
                <i class="fas fa-print me-2"></i>Imprimer
            </button>
            <a asp-action="Index" class="btn btn-dark shadow-sm fw-bold px-4">
                <i class="fas fa-undo me-2"></i>Nouvelle analyse
            </a>
        </div>
    </div>

    @if (topCandidat != null && topCandidat.ScoreGlobal > 0)
    {
        <div class="card border-0 shadow-lg rounded-4 mb-5 overflow-hidden bg-white">
            <div class="card-header text-white py-3 px-4 border-0 d-flex justify-content-between align-items-center"
                 style="background: linear-gradient(135deg, #2af598 0%, #009efd 100%);">
                <h5 class="mb-0 fw-bold"><i class="fas fa-trophy me-2 text-warning"></i>Meilleur Candidat</h5>
                <span class="badge bg-white text-primary fw-bold rounded-pill px-3">Match @topCandidat.ScoreGlobal%</span>
            </div>

            <div class="card-body p-0">
                <div class="row g-0">

                    <div class="col-lg-7 p-5 border-end">
                        <div class="d-flex align-items-center mb-4">
                            <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold shadow-sm me-3"
                                 style="width: 70px; height: 70px; font-size: 1.8rem; background-color: #009efd; border: 4px solid white;">
                                @topCandidat.NomComplet.Substring(0, 1)
                            </div>
                            <div>
                                <h3 class="fw-bold text-dark mb-0">@topCandidat.NomComplet</h3>
                                <p class="text-muted mb-0"><i class="fas fa-map-marker-alt me-1"></i> @topCandidat.JobActuel</p>
                            </div>
                        </div>

                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Points Clés de l'IA</h6>

                        <div class="mb-4 d-flex flex-wrap gap-2">
                            @foreach (var plus in topCandidat.DetailsPositifs.Take(4))
                            {
                                <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2 rounded-pill">
                                    <i class="fas fa-check-circle me-1"></i> @plus
                                </span>
                            }
                            @if (topCandidat.IsLocalisationOk)
                            {
                                <span class="badge bg-info-subtle text-info border border-info-subtle px-3 py-2 rounded-pill">
                                    <i class="fas fa-map-pin me-1"></i> Localisation parfaite
                                </span>
                            }
                        </div>

                        <div class="row g-3 text-center">
                            <div class="col-4">
                                <div class="p-3 bg-light rounded-3 border">
                                    <div class="text-muted small text-uppercase fw-bold">Technique</div>
                                    <div class="h4 fw-bold text-primary mb-0">@topCandidat.ScoreCompetences%</div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-3 bg-light rounded-3 border">
                                    <div class="text-muted small text-uppercase fw-bold">Expérience</div>
                                    <div class="h4 fw-bold text-warning mb-0">@topCandidat.ScoreExperience%</div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-3 bg-light rounded-3 border">
                                    <div class="text-muted small text-uppercase fw-bold">Ville</div>
                                    <div class="h4 fw-bold text-success mb-0">@topCandidat.ScoreLocalisation%</div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a asp-controller="Personnes" asp-action="Details" asp-route-id="@topCandidat.CandidatId"
                               class="btn btn-outline-primary w-100 rounded-pill fw-bold">
                                Accéder au dossier complet
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-5 p-4 bg-light d-flex flex-column align-items-center justify-content-center">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Adéquation Compétences</h6>
                        <div style="width: 100%; max-width: 350px;">
                            <canvas id="radarTopCandidat"></canvas>
                        </div>
                        <div class="mt-4 d-flex gap-3 small">
                            <span class="d-flex align-items-center"><span class="d-inline-block rounded-circle me-2" style="width: 10px; height: 10px; background: #adb5bd;"></span> Cible</span>
                            <span class="d-flex align-items-center"><span class="d-inline-block rounded-circle me-2" style="width: 10px; height: 10px; background: #009efd;"></span> Candidat</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                var ctx = document.getElementById('radarTopCandidat').getContext('2d');

                var labels = @Html.Raw(Json.Serialize(topCandidat.ChartLabels));
                var dataOffre = @Html.Raw(Json.Serialize(topCandidat.ChartDataOffre));
                var dataCandidat = @Html.Raw(Json.Serialize(topCandidat.ChartDataCandidat));

                new Chart(ctx, {
                    type: 'radar',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'Cible',
                                data: dataOffre,
                                backgroundColor: 'rgba(173, 181, 189, 0.2)',
                                borderColor: '#adb5bd',
                                pointBackgroundColor: '#adb5bd',
                                borderDash: [5, 5]
                            },
                            {
                                label: 'Candidat',
                                data: dataCandidat,
                                backgroundColor: 'rgba(0, 158, 253, 0.5)',
                                borderColor: '#009efd',
                                pointBackgroundColor: '#009efd',
                                borderWidth: 2
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            r: {
                                angleLines: { color: '#e9ecef' },
                                grid: { color: '#e9ecef' },
                                suggestedMin: 0,
                                suggestedMax: 5,
                                ticks: { display: false, stepSize: 1 },
                                pointLabels: { font: { size: 11, weight: 'bold' }, color: '#6c757d' }
                            }
                        },
                        plugins: { legend: { display: false } }
                    }
                });
            });
        </script>
    }

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white py-3 px-4 border-bottom">
            <h6 class="mb-0 fw-bold text-muted">Classement global (@Model.Count())</h6>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr class="text-muted small text-uppercase fw-bold">
                        <th class="ps-4 py-3">Rang</th>
                        <th>Candidat</th>
                        <th>Analyse Rapide</th>
                        <th class="text-center">Note</th>
                        <th class="text-end pe-4">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rang = 1;
                    }
                    @foreach (var candidat in Model)
                    {
                        // Code couleur note
                        string colorClass = "bg-light text-muted";
                        if (candidat.ScoreGlobal >= 80) { colorClass = "bg-success text-white"; }
                        else if (candidat.ScoreGlobal >= 50) { colorClass = "bg-warning text-dark"; }
                        else if (candidat.ScoreGlobal > 0) { colorClass = "bg-danger text-white"; }

                        <tr>
                            <td class="ps-4 fw-bold text-muted">#@rang</td>
                            <td>
                                <div class="fw-bold text-dark">@candidat.NomComplet</div>
                                <small class="text-muted">@candidat.JobActuel</small>
                            </td>
                            <td>
                                @if (candidat.DetailsNegatifs.Any())
                                {
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle"><i class="fas fa-exclamation-circle me-1"></i> @candidat.DetailsNegatifs.First()</span>
                                }
                                else if (candidat.DetailsPositifs.Any())
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle"><i class="fas fa-check me-1"></i> @candidat.DetailsPositifs.First()</span>
                                }
                            </td>
                            <td class="text-center">
                                <span class="badge @colorClass rounded-pill px-3 py-2 shadow-sm" style="font-size: 0.9rem;">
                                    @candidat.ScoreGlobal %
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-controller="Personnes" asp-action="Details" asp-route-id="@candidat.CandidatId"
                                   class="btn btn-sm btn-light border text-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        rang++;
                    }
                </tbody>
            </table>

            @if (Model.Count == 0)
            {
                <div class="text-center py-5 text-muted">
                    <p>Aucun candidat à analyser.</p>
                </div>
            }
        </div>
    </div>
</div>