@model IEnumerable<Projet.Models.Offre>

@{
    ViewData["Title"] = "Centre de Matching";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <div class="rounded p-2 me-3 shadow-sm text-white"
                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="fas fa-robot fa-lg"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0 text-dark">Centre de Matching IA</h4>
                <p class="mb-0 text-muted small">Analysez la compatibilité Offres / Candidats</p>
            </div>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-9">
            <div class="card border-0 shadow-sm h-100">

                <div class="card-header bg-white py-3 border-bottom">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0 fw-bold text-dark">Sélectionnez une offre</h5>
                        </div>
                        <div class="col-md-6">
                            <form asp-action="Index" method="get">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-search"></i></span>
                                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                                           class="form-control bg-light border-start-0"
                                           placeholder="Rechercher une offre..."
                                           onchange="this.form.submit()">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr class="text-muted small text-uppercase fw-bold">
                                <th class="ps-4 py-3">Offre d'emploi</th>
                                <th>Métier</th>
                                <th>Lieu</th>
                                <th class="text-end pe-4">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5 text-muted">
                                        <i class="fas fa-briefcase fa-2x mb-3 opacity-25"></i><br />
                                        Aucune offre trouvée. <a asp-controller="Offres" asp-action="Create">Créez-en une !</a>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center me-3 fw-bold"
                                                     style="width: 35px; height: 35px;">
                                                    @item.Titre.Substring(0, 1)
                                                </div>
                                                <div>
                                                    <span class="fw-bold text-dark d-block">@item.Titre</span>
                                                    <span class="small text-muted">Réf #@item.Id</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark border fw-normal">@item.Poste?.Intitule</span>
                                        </td>
                                        <td>
                                            <small class="text-muted"><i class="fas fa-map-marker-alt me-1"></i> @item.VilleCible</small>
                                        </td>
                                        <td class="text-end pe-4">
                                            <a asp-action="Calculer" asp-route-id="@item.Id"
                                               class="btn btn-sm text-white fw-bold rounded-pill px-3 shadow-sm btn-hover-scale"
                                               style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border:none;">
                                                <i class="fas fa-bolt me-1"></i> Analyser
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-3">

            <div class="card border-0 shadow-sm mb-4 bg-dark text-white"
                 style="background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);">
                <div class="card-body p-4 position-relative overflow-hidden">
                    <h2 class="display-4 fw-bold mb-0">@ViewBag.TotalCandidats</h2>
                    <p class="text-white-50 small text-uppercase fw-bold mb-3">Profils analysés</p>
                    <hr class="opacity-25">
                    <p class="small mb-0 opacity-75">
                        L'algorithme compare chaque offre à l'intégralité de votre vivier de talents en temps réel.
                    </p>
                    <i class="fas fa-users position-absolute" style="font-size: 8rem; right: -30px; bottom: -30px; opacity: 0.1;"></i>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-bold small text-uppercase text-muted">Comment ça marche ?</div>
                <div class="card-body">
                    <ul class="list-unstyled small text-muted mb-0">
                        <li class="mb-2 d-flex"><i class="fas fa-check-circle text-success me-2 mt-1"></i> <span>Analyse sémantique des compétences</span></li>
                        <li class="mb-2 d-flex"><i class="fas fa-check-circle text-success me-2 mt-1"></i> <span>Calcul pondéré de l'expérience</span></li>
                        <li class="d-flex"><i class="fas fa-check-circle text-success me-2 mt-1"></i> <span>Compatibilité géographique</span></li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .btn-hover-scale {
        transition: transform 0.2s;
    }

        .btn-hover-scale:hover {
            transform: scale(1.05);
        }
</style>