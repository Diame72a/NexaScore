@model IEnumerable<Projet.Models.Offre>

@{
    ViewData["Title"] = "Centre de Scoring";


    var totalOffres = Model != null ? Model.Count() : 0;
    var totalCandidats = (int)(ViewBag.TotalCandidats ?? 0);
}

<style>

    .hover-shadow:hover {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }

    .table-hover tbody tr:hover {
        background-color: #f8faff;
    }

    .icon-box {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
    }

    .transition-hover {
        transition: background-color 0.2s ease;
    }


    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .bg-gradient-dark {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
    }
</style>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-1">Centre de Scoring</h4>
            <p class="text-muted small mb-0">Pilotez vos recrutements et lancez les analyses de compatibilité.</p>
        </div>
        <div>
            <a asp-controller="Offres" asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4 fw-bold">
                <i class="fas fa-plus me-2"></i>Nouvelle Offre
            </a>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 hover-shadow">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary me-3">
                        <i class="fas fa-briefcase fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-0">Offres Actives</h6>
                        <h3 class="fw-bold text-dark mb-0">@totalOffres</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 hover-shadow">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="icon-box bg-success bg-opacity-10 text-success me-3">
                        <i class="fas fa-users fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-0">Vivier Candidats</h6>
                        <h3 class="fw-bold text-dark mb-0">@totalCandidats</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 text-white bg-gradient-primary hover-shadow">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="icon-box bg-white bg-opacity-25 text-white me-3">
                        <i class="fas fa-bolt fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="text-white-50 text-uppercase small fw-bold mb-0">Algorithme</h6>
                        <h3 class="fw-bold text-white mb-0">Prêt</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

                <div class="card-header bg-white py-3 px-4 border-bottom">
                    <form asp-action="Index" method="get">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0 ps-3"><i class="fas fa-search text-muted"></i></span>
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                                   class="form-control bg-light border-0 py-2"
                                   placeholder="Rechercher par titre ou ville..."
                                   onchange="this.form.submit()">
                            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
                            {
                                <a asp-action="Index" class="btn btn-light border-0 text-muted"><i class="fas fa-times"></i></a>
                            }
                        </div>
                    </form>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted small text-uppercase">
                            <tr>
                                <th class="ps-4 py-3 border-0">Offre</th>
                                <th class="border-0">Lieu & Date</th>
                                <th class="border-0 text-center">Profils Cibles</th>
                                <th class="border-0 text-end pe-4">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5">
                                        <div class="text-muted opacity-50 mb-3"><i class="fas fa-folder-open fa-3x"></i></div>
                                        <h6 class="fw-bold text-muted">Aucune offre trouvée</h6>
                                        <p class="small text-muted mb-3">Modifiez votre recherche ou créez une nouvelle offre.</p>
                                        <a asp-controller="Offres" asp-action="Create" class="btn btn-sm btn-outline-primary rounded-pill">Créer une offre</a>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    // --- CORRECTION ET SECURISATION DES DATES ---
                                    // 1. On récupère une date sûre (si null, on met DateTime.Now)
                                    DateTime dateSafe = item.DateCreation ?? DateTime.Now;

                                    // 2. Calcul booléen sur des types sûrs
                                    bool isNew = (DateTime.Now - dateSafe).TotalDays < 7;

                                    // 3. Initiale du titre sécurisée
                                    string initiale = (!string.IsNullOrEmpty(item.Titre)) ? item.Titre.Substring(0, 1).ToUpper() : "?";

                                    <tr class="transition-hover">
                                        <td class="ps-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-3 bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center me-3 fw-bold shadow-sm"
                                                     style="width: 42px; height: 42px; font-size: 1.1rem;">
                                                    @initiale
                                                </div>
                                                <div>
                                                    <div class="d-flex align-items-center">
                                                        <a asp-controller="Offres" asp-action="Details" asp-route-id="@item.Id" class="fw-bold text-dark text-decoration-none">
                                                            @item.Titre
                                                        </a>
                                                        @if (isNew)
                                                        {
                                                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle ms-2 rounded-pill" style="font-size: 0.6rem;">NOUVEAU</span>
                                                        }
                                                    </div>
                                                    <span class="small text-muted">@item.Poste?.Intitule</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column small">
                                                <span class="text-dark fw-bold"><i class="fas fa-map-marker-alt text-muted me-1"></i> @item.VilleCible</span>
                                                <span class="text-muted">Créé le @dateSafe.ToString("dd/MM/yyyy")</span>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-light text-muted border rounded-pill">Tout le vivier</span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <a asp-action="Calculer" asp-route-id="@item.Id"
                                               class="btn btn-primary btn-sm rounded-pill px-3 fw-bold shadow-sm"
                                               title="Lancer le matching IA">
                                                <i class="fas fa-magic me-1"></i> Analyser
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.Any())
                {
                    <div class="card-footer bg-white py-3 px-4 border-0 d-flex justify-content-between align-items-center">
                        <small class="text-muted">Affichage de <strong>@Model.Count()</strong> résultats</small>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-3">

            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body">
                    <h6 class="fw-bold text-dark mb-3"><i class="fas fa-info-circle text-primary me-2"></i>Comment ça marche ?</h6>
                    <ul class="list-unstyled small text-muted mb-0 d-flex flex-column gap-2">
                        <li class="d-flex align-items-start">
                            <i class="fas fa-check-circle text-success mt-1 me-2"></i>
                            <span>L'algorithme analyse les compétences requises vs acquises.</span>
                        </li>
                        <li class="d-flex align-items-start">
                            <i class="fas fa-check-circle text-success mt-1 me-2"></i>
                            <span>L'expérience est pondérée selon le profil (Junior/Senior).</span>
                        </li>
                        <li class="d-flex align-items-start">
                            <i class="fas fa-check-circle text-success mt-1 me-2"></i>
                            <span>La localisation impacte le score final (bonus ou malus).</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 bg-light overflow-hidden">
                <div class="card-body text-center p-4">
                    <div class="mb-3 text-primary opacity-50">
                        <i class="fas fa-file-contract fa-3x"></i>
                    </div>
                    <h6 class="fw-bold text-dark">Besoin d'ajouter un poste ?</h6>
                    <p class="small text-muted mb-3">Définissez les critères précis pour obtenir un scoring pertinent.</p>
                    <a asp-controller="Offres" asp-action="Create" class="btn btn-outline-primary rounded-pill w-100 fw-bold">
                        Créer une fiche
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>