@model List<Projet.Controllers.ScoringBetaController.ResultatIA>

@{
    ViewData["Title"] = "Résultats IA";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-dark mb-1">
                <i class="fas fa-brain text-warning me-2"></i>Analyse Sémantique
            </h2>
            <p class="text-muted mb-0">
                L'IA a comparé le vocabulaire du CV avec <strong>@Model.Count</strong> offres pertinentes.
            </p>
        </div>
        <a asp-action="Index" class="btn btn-light rounded-pill fw-bold border shadow-sm hover-scale">
            <i class="fas fa-redo me-2"></i>Scanner un autre CV
        </a>
    </div>

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info d-flex align-items-center rounded-4 p-4">
                    <i class="fas fa-info-circle fa-2x me-3"></i>
                    <div>
                        <h5 class="fw-bold mb-1">Aucune correspondance trouvée</h5>
                        <p class="mb-0">Le vocabulaire du CV ne correspond à aucune offre actuelle. Essayez d'ajouter des mots-clés techniques dans le CV.</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            @foreach (var match in Model)
            {
                // Protection contre une offre nulle (très rare mais possible)
                if (match.Offre == null) continue;

                // Logique de couleur dynamique selon le score
                string gradient = match.Score >= 75
                ? "linear-gradient(135deg, #1cc88a 0%, #13855c 100%)" // Vert (Excellent)
                : (match.Score >= 50
                ? "linear-gradient(135deg, #4e73df 0%, #224abe 100%)" // Bleu (Moyen)
                : "linear-gradient(135deg, #f6c23e 0%, #fd7e14 100%)"); // Orange (Faible)

                <div class="col-12">
                    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-3 hover-lift">
                        <div class="card-body p-0 d-flex flex-column flex-md-row">

                            <div class="p-4 d-flex flex-column align-items-center justify-content-center text-white text-center"
                                 style="background: @gradient; min-width: 160px;">
                                <h1 class="fw-bold mb-0 display-5">@match.Score.ToString("0")<span style="font-size:1.5rem">%</span></h1>
                                <div class="text-uppercase fw-bold" style="font-size: 0.75rem; opacity: 0.9;">de pertinence</div>
                            </div>

                            <div class="p-4 flex-grow-1">
                                <div class="d-flex justify-content-between">
                                    <h4 class="fw-bold text-dark mb-1">@match.Offre.Titre</h4>
                                    <span class="badge bg-light text-muted border align-self-start">
                                        <i class="fas fa-map-marker-alt me-1"></i> @(match.Offre.VilleCible ?? "Ville inconnue")
                                    </span>
                                </div>

                                <p class="text-muted small mb-3">
                                    @{
                                        string desc = match.Offre.Description ?? "Aucune description disponible.";
                                        if (desc.Length > 200)
                                        {
                                            @desc.Substring(0, 200)
                            
                                            <span>...</span>
                                        }
                                        else
                                        {
                                            @desc
                                        }
                                    }
                                </p>

                                <div class="bg-light p-3 rounded-3 border border-light">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-robot text-primary me-2"></i>
                                        <span class="fw-bold text-uppercase small text-primary">Pourquoi ce score ?</span>
                                    </div>

                                    @if (match.MotsCles != null && match.MotsCles.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-2">
                                            @foreach (var mot in match.MotsCles.Take(12))
                                            {
                                                <span class="badge bg-white text-dark border shadow-sm px-2 py-1">
                                                    @mot
                                                </span>
                                            }
                                            @if (match.MotsCles.Count > 12)
                                            {
                                                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-10">
                                                    +@(match.MotsCles.Count - 12) autres
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <small class="text-muted fst-italic">
                                            Faible correspondance sémantique détectée.
                                        </small>
                                    }
                                </div>
                            </div>

                            <div class="p-4 d-flex flex-column justify-content-center bg-white border-start">
                                <a asp-controller="Offres" asp-action="Details" asp-route-id="@match.Offre.Id"
                                   class="btn btn-outline-dark rounded-pill fw-bold mb-2 text-nowrap">
                                    Voir l'offre
                                </a>
                                <small class="text-muted text-center" style="font-size: 0.7rem;">
                                    ID: #@match.Offre.Id
                                </small>
                            </div>

                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <style>
        .hover-lift {
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .hover-lift:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
            }

        .hover-scale:hover {
            transform: scale(1.02);
        }
    </style>
}